<h1 class="mb-5"><i class="bi bi-gear"></i> Update Job</h1>

<form action="/update-job/<%= jobObj.id %>" method="post" class="mb-5 mt-5">
    <div class="row">

        <div class="col-12">
            <input type="hidden" class="form-control" id="id" name="id" value="<%= jobObj.id %>">
            <div class="mb-5">
                <label for="company" class="form-label"><i class="bi bi-buildings"></i> Company</label>
                <input type="text" class="form-control" id="company" name="companyName"
                    placeholder="Enter the company name" value=" <%= jobObj.companyName %>">
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="mb-5">
                <label class="form-label" for="category"><i class="bi bi-door-open"></i> Category</label>
                <select class="form-select" aria-label="Default select example" id="category" name="jobCategory">
                    <option selected>
                        <%= jobObj.jobCategory %>
                    </option>
                    <option value="on-site">On-Site</option>
                    <option value="hybrid">Hybrid</option>
                    <option value="remote">Remote</option>
                </select>
            </div>
            <div class="mb-5">
                <label for="salary" class="form-label"><i class="bi bi-currency-rupee"></i> Salary Range</label>
                <input type="text" class="form-control" id="salary" name="salaryRange"
                    placeholder="Enter the salary range" value="<%= jobObj.salaryRange %>">
            </div>
            <div class="mb-5">
                <label class="form-label" for="openings"><i class="bi bi-people"></i> Number Of Openings</label>
                <input type="number" name="numberOfOpenings" id="openings" class="form-control"
                    value="<%= jobObj.numberOfOpenings %>">
            </div>
        </div>


        <div class="col-12 col-md-6">
            <div class="mb-5">
                <label class="form-label" for="designation"><i class="bi bi-person-check"></i>
                    Designation</label>
                <select class="form-select" aria-label="Default select example" id="designation" name="jobDesignation">
                    <option selected>
                        <%= jobObj.jobDesignation %>
                    </option>
                    <option value="full-stack-developer">Full-Stack Developer</option>
                    <option value="front-end-developer">Front-End Developer</option>
                    <option value="back-end-developer">Back-End Developer</option>
                </select>
            </div>
            <div class="mb-5">
                <label for="location" class="form-label"><i class="bi bi-geo-alt"></i> Location</label>
                <input type="text" class="form-control" id="location" name="jobLocation"
                    placeholder="Enter the job location" value=" <%= jobObj.jobLocation %>">
            </div>
            <div class="mb-5">
                <label for="lastDate" class="form-label"><i class="bi bi-calendar2-x"></i> Apply By</label>
                <input type="date" class="form-control" id="lastDate" name="applyBy" value="<%= jobObj.applyBy %>">
            </div>
        </div>

        <div class="col-12 ">
            <div class="mb-5">
                <label class="form-label" for="skills"><i class="bi bi-laptop"></i> Skills Required</label>
                <input type="text" class="form-control" id="skills" name="skillsRequired"
                    placeholder="Enter the required skills" value="<%= jobObj.skillsRequired %>">
                <p class="my-form-help"><i class="bi bi-info-circle"></i> Please separate skills with commas</p>
            </div>
        </div>
    </div>
    <button type="submit" class="btn my-btn">Update Job</button>
</form>