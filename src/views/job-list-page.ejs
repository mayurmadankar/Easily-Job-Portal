<div class="row my-card-row ">
    <h1 class="mb-5"><i class="bi bi-list-ol"></i> Available Jobs</h1>

    <% if (jobStructureArray && jobStructureArray.length> 0) { %>
        <% jobStructureArray.forEach(jobObj=>{ %>
            <div class="col-12 col-md-5 col-lg-4 mb-5">
                <div class="my-card ">
                    <h2 class="mb-4 "><i class="bi bi-buildings"></i>
                        <%= jobObj.companyName %>
                    </h2>
                    <h5><i class="bi bi-person-check"></i> Designation:</h5>
                    <p>
                        <%= jobObj.jobDesignation %>
                    </p>
                    <h5><i class="bi bi-geo-alt"></i> Location:</h5>
                    <p>
                        <%= jobObj.jobLocation %>
                    </p>
                    <h5><i class="bi bi-laptop"></i> Skills Required:</h5>
                    <p class="mb-5">
                        <%= jobObj.skillsRequired %>
                    </p>
                    <a href="/more-details/<%= jobObj.id %>" class="my-btn">More Details</a>
                </div>
            </div>

            <% }) %>
                <% } else { %>
                    <p>No jobs available</p>
                    <% } %>


</div>