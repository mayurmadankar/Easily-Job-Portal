<div class="row">
    <div class="col-12 col-md-6">
        <img src="images/men1.avif" class="img-fluid" alt="">
    </div>
    <div class="col-12 col-md-6 ">
        <h1><i class="bi bi-box-arrow-in-left"></i> Log In</h1>
        <form action="/login" method="post" class="mt-5 mb-5">
            <div class="mb-5">
                <label for="email" class="form-label"><i class="bi bi-envelope"></i> Email address</label>
                <input type="email" class="form-control" id="email" name="userEmail" placeholder="Enter your email"
                    required>
                <p class="my-form-help"><i class="bi bi-info-circle"></i> We'll never share your email with anyone
                    else.</p>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"><i class="bi bi-upc-scan"></i> Password</label>
                <input type="password" class="form-control" id="password" name="userPassword"
                    placeholder="Enter your password" required>
            </div>
            <p>Are you not resgistered? <a href="/register" class="my-form-redirection">Register</a></p>
            <button type="submit" class=" btn my-btn">Log In</button>
        </form>
    </div>
</div>