<div class="row">
    <div class="col-12 col-md-6">
        <img src="/images/men1.avif" class="img-fluid" alt="">
    </div>
    <div class="col-12 col-md-6">
        <h1><i class="bi bi-ui-checks-grid"></i>
            <%= jobObj.companyName%>
        </h1>

        <form action="/apply-job/<%= jobObj.id%>" method="post" class="mb-5 mt-5" enctype="multipart/form-data">

            <input type="hidden" class="form-control" id="companyName" name="companyName"
                value="<%= jobObj.companyName%>">

            <div class="mb-5">
                <label for="name" class="form-label"><i class="bi bi-person"></i> Name</label>
                <input type="text" class="form-control" id="name" name="applicantName" placeholder="Enter your name" required>
            </div>
            <div class="mb-5">
                <label for="email" class="form-label"><i class="bi bi-envelope"></i> Email address</label>
                <input type="email" class="form-control" id="email" name="applicantEmail" placeholder="Enter you email"
                    required>
                <p class="my-form-help"><i class="bi bi-info-circle"></i> We'll never share your email with anyone else.
                </p>
            </div>
            <div class="mb-5">
                <label for="phone-number" class="form-label"><i class="bi bi-telephone"></i> Phone
                    Number</label>
                <input type="tel" class="form-control" id="phone-number" name="applicantPhoneNumber" step="0.01"
                    placeholder="Enter you phone-number" required>
            </div>
            <div class=" mb-5">
                <label class="form-label" for="resume"><i class="bi bi-filetype-pdf"></i> Upload Resume</label>
                <input type="file" class="form-control" id="resume" name="applicantResume" required >
                <p class="my-form-help"><i class="bi bi-info-circle"></i> The file should be in PDF formate only.</p>
            </div>
            <button type="submit" class="btn my-btn">Submit</button>
        </form>
    </div>
</div>